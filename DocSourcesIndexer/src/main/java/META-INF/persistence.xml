<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd "
			 version="2.0">
	<persistence-unit name="BiaPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<!-- create-drop will generate database schema -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.search.default.exclusive_index_use" value="true"/> 
			<property name="hibernate.search.default.directory_provider" value="filesystem"/>
			<property name="hibernate.search.default.locking_strategy" value="single"/> 
			<property name="hibernate.search.default.indexBase" value="/data/indexes/bia"/> 
		</properties>
	</persistence-unit>

	<persistence-unit name="BiaDemoPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<!-- create-drop will generate database schema -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.search.default.exclusive_index_use" value="true"/> 
			<property name="hibernate.search.default.directory_provider" value="filesystem"/>
			<property name="hibernate.search.default.locking_strategy" value="single"/> 
			<property name="hibernate.search.default.indexBase" value="/data/indexes/biademo"/> 
		</properties>
	</persistence-unit>
</persistence>
